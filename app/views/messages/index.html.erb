<h1 class="text-center" >Messages Listing page</h1>


<div class="container" >
<% @messages.each do |message| %>
<div class="row justify-content-md-center" >
<div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header font-italic">
  </div>
  <div class="card-body">
    <h5 class="card-title">Messages</h5>
    
    <p class="card-text"><%= truncate(message.comment, length: 100) %></p>
    <%= link_to 'View', message_path(message), class: "btn btn-outline-success" %>
    
    <%= link_to 'Edit', edit_message_path(message), method: :edit, class: "btn btn-outline-info" %>
    <div class="d-inline-block">
    <%= button_to 'Delete', message_path(message), method: :delete, :onclick => "return confirm('Are you sure you want to delete this thread?')", class: "btn btn-outline-danger" %>
    </div>
    
  </div>
  <div class="card-footer text-body-secondary">
    <small>Created <%= time_ago_in_words(message.created_at)%> ago,
    edited <%= time_ago_in_words(message.updated_at) %> ago</small>
  </div>
</div>
</div>
</div>
<% end %>
</div>





