<div class="container">

<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors', obj: @message %>
<%= form_with(model: @message, class: "shadow p-3 mb-3 bg-info rounded", locale: true) do |f| %>

<div class="form-group row">

<%= f.label :Message, class: "col-2 col-form-label text-light" %>
<div class="col-10">
<%= f.text_field :comment, class: "form-control shadow rounded", placeholder: "Title of project" %>
</div>
</div>


<div class="form-group row justify-content-center">
<%= f.submit class: "col-2 btn btn-outline-light btn-lg mt-2" %>
</div>

<% end %>
</div>
</div>
</div>