
<h2 class="text-center" ><%= @project.title %></h2>

<div class="container" >

<div class="row justify-content-md-center" >
<div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header font-italic">
    By Bunmi Jemiyo
  </div>
  <div class="card-body">
    
    <% if @project.image.attached? %>
    
  <img src="<%= url_for(@project.image) %>" alt="Project Image" width="80" height="80">
<% end %>
    <div class="card-text text-left"><%= simple_format(@project.description) %></div>
    

    <%= link_to 'Edit', edit_project_path(@project), method: :edit, class: "btn btn-outline-info" %>
    <%= link_to 'Delete', project_path(@project), class: "btn btn-outline-danger", method: :delete, :onclick => "return confirm('Are you sure you want to delete this project?')" %>
    
  </div>
  <div class="card-footer text-body-secondary">
    <small>Created <%= time_ago_in_words(@project.created_at)%> ago,
    edited <%= time_ago_in_words(@project.updated_at) %> ago</small>
  </div>
</div>
</div>
</div>
</div>





