<h1>Projects Listinng page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
    <td><%= project.title%></td>
    <td><%= project.description%></td>
    
    

    <% if project.image.attached? %>
    <td>
  <img src="<%= url_for(project.image) %>" alt="Project Image" width="80" height="80">
<% end %>
</td>
<td>
<%= button_to 'Delete project', project_path(project), method: :delete, :onclick => "return confirm('Are you sure you want to delete this project?')" %>
</td>
<td>
    <%= link_to 'View project', project_path(project) %>
</td>

    

    <td>Placeholder</td>
    </tr>
    <% end %>
  </tbody>
</table>