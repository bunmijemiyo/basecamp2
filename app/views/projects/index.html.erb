<div id="page-content" >
<h1 class="text-center" >Projects Listing page</h1>

<div class="container" >
<% @projects.each do |project| %>
<div class="row justify-content-md-center" >
<div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header font-italic">
    By Bunmi Jemiyo
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to project.title, project_path(project), class: "text-success" %></h5>
    <% if project.image.attached? %>
    
  <img src="<%= url_for(project.image) %>" alt="Project Image" width="80" height="80">
<% end %>
    <p class="card-text"><%= truncate(project.description, length: 100) %></p>
    <a href="#" class="btn btn-outline-success">View</a>
    <a href="#" class="btn btn-outline-info">Edit</a>
    <a href="#" class="btn btn-outline-danger">Delete</a>
  </div>
  <div class="card-footer text-body-secondary">
    <small>Created <%= time_ago_in_words(project.created_at)%> ago,
    edited <%= time_ago_in_words(project.updated_at) %> ago</small>
  </div>
</div>
</div>
</div>
<% end %>
</div>
</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
    <td><%= project.title%></td>
    <td><%= project.description%></td>
    
    

    <% if project.image.attached? %>
    <td>
  <img src="<%= url_for(project.image) %>" alt="Project Image" width="80" height="80">
<% end %>
</td>
<td>
<%= button_to 'Delete project', project_path(project), method: :delete, :onclick => "return confirm('Are you sure you want to delete this project?')" %>
</td>
<td>
<%= link_to 'Edit project', edit_project_path(project) %>
</td>
<td>
    <%= link_to 'View project', project_path(project) %>
</td>

    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create New project', new_project_path %></p>