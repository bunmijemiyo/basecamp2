<h1>Edit Projects</h1>

<% if @project.errors.any? %>

  <h4>The following errors prevented articles from being saved</h4>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  
<% end %>

<%= form_with(model: @project, locale: true) do |f| %>

<p>
<%= f.label :title %><br>
<%= f.text_field :title %>
</p>

<p>
<%= f.label :description %><br>
<%= f.text_area :description %>
</p>

<p>
<%= f.label :image %><br>
<%= f.file_field :image %>
</p>

<p>
<%= f.submit %>
</p>

<% end %>