<div class="container">

<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors' %>
<%= form_with(model: @project, class: "shadow p-3 mb-3 bg-info rounded", locale: true) do |f| %>
<div class="form-group row">

<%= f.label :title, class: "col-2 col-form-label text-light" %>
<div class="col-10">
<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of project" %>
</div>
</div>

<div class="form-group row">
<%= f.label :description, class: "col-2 col-form-label text-light" %>
<div class="col-10">
<%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Description of project" %>
</div>
</div>

<div class="form-group row">
<%= f.label :image, class: "col-2 col-form-label text-light" %>
<div class="col-10">
<%= f.file_field :image, class: "form-control form-control-lg shadow rounded"  %>
</div>
</div>

<div class="form-group row justify-content-center">
<%= f.submit class: "col-2 btn btn-outline-light btn-lg mt-2" %>
</div>

<% end %>
</div>
</div>
</div>